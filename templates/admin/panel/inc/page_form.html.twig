{{ form_start(form) }}
<div class="error-box">
</div>
<div class="row">
    <div class="col-6">{{ form_row(form.name) }}</div>
</div>
<div class="row mt-3">
    <div class="col-6">{{ form_row(form.title) }}</div>
</div>
<div class="row mt-3">
    <div class="col-6">{{ form_row(form.description) }}</div>
</div>
<div class="row mt-3">
    {{ form_label(form.slug) }}
    <small class="text-muted">test If this page has parent, then you can't really edit the first part of the URL here</small>
    <div class="d-flex">
        {% if parent_slug %}
            <div style="margin-top:3px; margin-right:5px;">{{ parent_slug }}/</div>
        {% endif %}
        <div>{{ form_widget(form.slug) }}</div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-6">
        {{ form_row(form.is_home, {
            'help': '<small class="text-muted">Check if you want this page to be displayed as home</small>',
            'help_html': true
        }) }}
    </div>
</div>
<div class="row mt-3">
    {{ form_label(form.robots_settings) }}
    <div class="col-6">
        {{ form_widget(form.robots_settings) }}
    </div>
</div>
<div class="row mt-3">
    {{ form_label(form.parent_id) }}
    <div class="col-6">
        {{ form_widget(form.parent_id) }}
    </div>
</div>
<div class="row mt-3">
    <div class="col-6">{{ form_row(form.content) |raw }}</div>
</div>
<button type="submit" class="btn btn-success mt-4">Save page</button>
{% if errors %}
    <div class="mt-3 text-danger">
        There were some errors during submitting form:
        {{ form_errors(form) }}
    </div>
{% endif %}

{{ form_end(form) }}


