{% extends 'base.html.twig' %}

{% block title %}Hello PanelController!{% endblock %}
{% block nav %}
    {% include 'admin/panel/nav.html.twig' %}
{% endblock %}
{% block body %}
    <div class="flex-column">
        <h1>Manage pages</h1>
        <a class="btn btn-secondary m-1" href="/admin/pages/new">New page</a>
        <ul>
        {% for page in pages %}
            <li>{{ page.name }} - <a href="/admin/pages/edit/{{ page.id }}">edit</a>, <a style="color:crimson;" href="/admin/pages/delete/{{ page.id }}">delete</a> </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
