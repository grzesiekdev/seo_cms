{% extends 'base.html.twig' %}

{% block title %}Hello PanelController!{% endblock %}
{% block nav %}
    {% include 'admin/panel/inc/nav.html.twig' %}
{% endblock %}
{% block body %}
    <div class="flex-column w-75 p-3 admin-column">
        <h1>Edit menu</h1>
        {{ form_start(form) }}
            {{ form_label(form.Page, "Select pages which you want to add to menu (ctrl + click for multiple selection)") }}
            {{ form_label(form.Submit) }}
        {{ form_end(form) }}
        <h3 class="mt-5">Pages in menu:</h3>
        <div class="card mt-1 w-25">
            <ul class="list-group list-group-flush">
                {% for page in pages_in_menu %}
                    <li class="list-group-item text-center">
                        <div class="row">
                            <div class="col-3"> {{ page.Name }} </div> |
                            <div class="col-2">
                                <a target="_blank" style="color: #303030;" class="text-decoration-none" href="/{{ page.slug }}">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                            </div> |
                            <div class="col-2">
                                <a href="/admin/menu/delete/{{ page.menuPages.id }}" class="link-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div> |
                            <div class="col-3">
                                <a href="" class="link-info text-decoration-none">
                                    <i class="fa-solid fa-arrow-up-long"></i>
                                </a>
                                <a href="" class="link-info">
                                    <i class="fa-solid fa-arrow-down-long"></i>
                                </a>
                            </div>

                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
