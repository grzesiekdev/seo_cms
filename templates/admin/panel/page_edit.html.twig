{% extends 'base.html.twig' %}

{% block title %}Hello PanelController!{% endblock %}
{% block nav %}
    {% include 'admin/panel/nav.html.twig' %}
{% endblock %}
{% block body %}
    <div class="flex-column p-4">
        <h1>Edit page</h1>
        {{ form_start(form) }}
        <div class="error-box">
        </div>
        <div class="row">
            <div class="col-6">{{ form_row(form.name) }}</div>
        </div>
        <div class="row mt-3">
            <div class="col-6">{{ form_row(form.title) }}</div>
        </div>
        <div class="row mt-3">
            <div class="col-6">{{ form_row(form.description) }}</div>
        </div>
        <div class="row mt-3">
            <div class="col-6">{{ form_row(form.content) |raw }}</div>
        </div>
        <button type="submit" class="btn btn-success mt-4">Edit page</button>
        {{ form_end(form) }}
        {% if page.WasEdited %}
        <div class="mt-2">
            Last edit on {{ page.CreationDate|date }}
        </div>
        {% endif %}
    </div>
{% endblock %}
